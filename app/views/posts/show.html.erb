<p style="color: green"><%= notice %></p>

<div class="h-100 p-5 bg-light border rounded-3">
  <%= render @post %>
</div>
<div style="margin-top:10px;margin-bottom:10px;display:flex">
  <%= link_to "Edit this post", edit_post_path(@post), class: "btn btn-secondary" %>
  <%= button_to "Destroy this post", @post, method: :delete, class: "btn btn-danger", style: "margin-left:10px"%>
  <%= link_to "< Back to posts", posts_path, style: "margin-left:auto" %>
</div>
